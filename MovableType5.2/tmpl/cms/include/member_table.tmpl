<mt:setvarblock name="action_buttons">
<button
   onclick="doRemoveItems(getByID('<$mt:var name="object_type"$>-listing-form'), '<__trans phrase="user" escape="js">', '<__trans phrase="users" escape="js">', 'id', {<mt:if name="search">'search':'<mt:var name="search" escape="js">'</mt:if>}, { 'mode': 'remove_user_assoc', 'singular_prompt': '<__trans phrase="Are you sure you want to remove the selected user from this [_1]?" params="<mt:var name="scope_label">" escape="js">', 'plural_prompt': '<__trans phrase="Are you sure you want to remove the [_1] selected users from this [_2]?" params="[_1]%%<mt:var name="scope_label">" escape="js">' }); return false;"
   accesskey="r"
   title="<__trans phrase="Remove selected user(s) (r)">"
   class="button">
  <__trans phrase="Remove">
</button>
</mt:setvarblock>

<mtapp:listing>
<mt:if name="__first__">
  <!-- for role_revoke mode -->
  <input type="hidden" name="role_id" value="" />
  <input type="hidden" name="author_id" value="" />
  <mt:setvarblock name="table_header">
    <tr>
      <th class="col head cb"><input type="checkbox" name="id-head" value="all" class="select" /></th>
      <th class="col head status si"><img src="<mt:var name="static_uri">images/status_icons/invert-flag.gif" alt="<__trans phrase="Status">" title="<__trans phrase="Status">" width="9" height="9" /></th>
      <th class="col head username primary"><span class="col-label"><__trans phrase="Username"></span></th>
      <th class="col head name primary"><span class="col-label"><__trans phrase="Name"></span></th>
    <mt:if name="can_manage">
      <mt:unless name="filter_key" eq="commenter">
      <th class="col head roles"><span class="col-label"><__trans phrase="Roles"></span></th>
      </mt:unless>
    </mt:if>
    <mt:loop name="more_column_headers">
      <mt:var name="__value__">
    </mt:loop>
    </tr>
  </mt:setvarblock>
  <thead>
    <mt:var name="table_header">
  </thead>
  <tfoot>
    <mt:var name="table_header">
  </tfoot>
  <tbody>
</mt:if>
    <tr class="<mt:if name="__odd__">odd<mt:else>even</mt:if>">
      <td class="col cb"><input<mt:if name="is_administrator"><mt:if name="is_me"> id="sysadmin"</mt:if></mt:if> type="checkbox" name="id" value="<$mt:var name="id"$>" class="select" /></td>
    <mt:if name="usertype_author">
      <td class="col <mt:if name="status_enabled">user-status-enabled<mt:else><mt:if name="status_pending">user-status-pending<mt:else>user-status-disabled</mt:if></mt:if> si">
        <img src="<mt:var name="static_uri">images/spacer.gif" alt="<__trans phrase="_USER_ENABLED">" class="status-icon" width="13" height="9" />
      </td>
      <td class="col username"><mt:if name="has_edit_access"><a href="<mt:var name="script_url">?__mode=view&amp;_type=author&amp;id=<mt:var name="id">"></mt:if><mt:var name="name" escape="html"><mt:if name="has_edit_access"></a></mt:if></td>
    <mt:else>
      <td class="col <mt:if name="status_trusted">status-trusted<mt:else>user-status-enabled</mt:if> si"><img src="<mt:var name="static_uri">images/spacer.gif" alt="<mt:if name="status_trusted"><__trans phrase="Trusted commenter"><mt:else><__trans phrase="Commenter"></mt:if>" width="13" height="9" /></td>
      <td class="col username"><mt:if name="auth_icon_url"><img src="<mt:var name="auth_icon_url">" height="16" width="16" alt="" title="<mt:var name="auth_icon_url">" border="0" style="background-image: none" /> </mt:if><mt:if name="user_id" eq="PSEUDO"><mt:var name="user_name"><mt:else><mt:if name="has_edit_access"><a href="<mt:var name="script_url">?__mode=view&amp;_type=commenter&amp;id=<mt:var name="id">&amp;blog_id=<mt:var name="blog_id">"></mt:if><mt:var name="name" escape="html"><mt:if name="has_edit_access"></a></mt:if></mt:if></td>
    </mt:if>
      <td class="col name">
        <mt:if name="nickname">
          <span class="status-name"><mt:var name="nickname" escape="html"></span><mt:elseif name="user_nickname"><span class="status-name"><mt:var name="user_nickname" escape="html"></span>
        </mt:if>
        <mt:if name="email">
          <span class="status-email"><a href="mailto:<mt:var name="email" escape="html">" title="<mt:var name="email" escape="html">"><img src="<mt:var name="static_uri">images/spacer.gif" alt="<__trans phrase="Email">" width="16" height="9" /></a></span>
        </mt:if>
        <mt:if name="url">
          <span class="status-link"><a href="<mt:var name="url" escape="html">" title="<mt:var name="url" escape="html">"><img src="<mt:var name="static_uri">images/spacer.gif" alt="<__trans phrase="Link">" width="16" height="9" /></a></span>
        </mt:if>
      </td>
    <mt:if name="can_manage">
      <mt:unless name="filter_key" eq="commenter">
      <td class="col roles">
      <mt:if name="role_loop">
        <mt:loop name="role_loop" glue=", ">
        <mt:if name="__first__">
        <ul>
        </mt:if>
          <li class="role-item" title="<mt:var name="role_perms" escape="html">" onmouseover="DOM.addClassName(this, 'focus')" onmouseout="DOM.removeClassName(this, 'focus')">
            <mt:var name="role_name">
            <mt:if name="can_manage">
              <mt:if name="is_removable">
                <a href="javascript:void(0)" onclick="return removeMemberRole(<mt:var name="id">,<mt:var name="role_id">)" class="delete" title="<__trans phrase="Remove this role">">&nbsp;</a>
              </mt:if>
            </mt:if>
          </li>
        <mt:if name="__last__">
        <li>
        </mt:if>
        </mt:loop>
      </mt:if>
      </td>
      </mt:unless>
    </mt:if>
    <mt:loop name="more_columns">
      <mt:var name="__value__">
    </mt:loop>
    </tr>
<mt:if name="__last__">
  </tbody>
</mt:if>
</mtapp:listing>
